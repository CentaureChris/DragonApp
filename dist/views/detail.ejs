<%- include('header'); -%>
<%- include('navbar'); -%>

<body id="detailPage">
  <main>
    <div style="display:flex;justify-content: space-around;">
    <section style="width: 50%;" class="p-2">
      <div class="card mt-3" style="width: 100%;">
        <a href="/detail/<%= dragon.id %>" class="disabled_aColor">
        <img src="/images/<%= dragon.avatar %>" class="img-fluid rounded-start" alt="<%= dragon.avatar %>">
        <div class="card-body">
          <h5 class="card-title"><%= dragon.name %> <small>lvl(<%= dragon.level %>)</small></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Attack: <%= dragon.attack %></li>
          <li class="list-group-item">Defense: <%= dragon.defense %></li>
          <li class="list-group-item">Slip: <%= dragon.slip %></li>
          <% if(dragon.objects != null){ %> 
          <li class="list-group-item">Objects: 
            <ol class="list-group list-group-flush" style="display: flex;flex-direction: inherit;justify-content: space-between;">
              <%for(var j=0; j < dragon.objects.length ; j++) {%>
                <li><img src="/images/<%= dragon.objects[j].image %>" alt="" style="width:5rem"></li>
              <% } %>
            <% }else {%>
                <li class="list-group-item">Objects: 
                  <ol class="list-group list-group-flush">
                    <li class="list-group-item">empty</li>
                  </ol>
                </li>
              <% } %>
            </ol>
          </li> 
        </ul>
      </a>
      </div>
    </section>
    <section style="width: 50%;" class="row row-cols-1 row-cols-md-2 g-4 p-2">
      <% for(var j=0; j < objects.length ; j++) { %>
        <div class="col">
          <img src="/images/<%= objects[j].image %>" alt="" style="width: 100%;border-radius: 10%;">
        </div>
      <% } %> 
    </section>
    </div>
    <a href="/fight_selection/<%= dragon.id %>/<%= dragon.rider %>">
      <button>Go to fight </button>
    </a>
  </main>
  
    <%- include('footer'); -%> 
</body>

</html>


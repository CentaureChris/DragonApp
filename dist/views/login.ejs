<%- include('header'); -%>
<%- include('navbar'); -%>

<body id="loginPage">
    <main style="margin:15%">
        <form method="post" action="auth" >
            <fieldset class="bg-light p-2 text-white bg-opacity-50">
                <legend class="text-center">Login Form</legend>
                <% if(info !== ""){ %>
                <div class="bg-danger p-2 text-white text-center bg-opacity-50 rounded-pill mb-3"><%= info %></div>
                <% } %> 
                <div class="mb-3">
                    <label for="disabledTextInput" class="form-label">Login</label>
                    <input type="text" id="login" name="login" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="disabledSelect" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <div class="mb-3">
                    <a href="/register">Doesn't have any account? click here to register...</a>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
        </form>
    </main>
    <%- include('footer'); -%>
</body>


<%- include('header'); -%>
<%- include('navbar'); -%>

<body id="fightPage">
    <main style="display:flex;justify-content:space-around">
    <div style="height: 100px;width:35%;">
        <div class="card mt-3">
            <img src="/images/<%= dragon.avatar %>" class="img-fluid rounded-start" alt="<%= dragon.avatar %>">
            <div class="card-body">
            <h5 class="card-title"><%= dragon.name %> <small>lvl(<%= dragon.level %>)</small></h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Attack: <%= dragon.attack %></li>
                  <li class="list-group-item">Defense: <%= dragon.defense %></li>
                  <li class="list-group-item">Slip: <%= dragon.slip %></li>
                </ul>
        </div>
    </div>
    <div style="height: 100px;width:30%;">
        <img src="/images/vs.png" alt="" srcset="" style="width:-webkit-fill-available;">
    </div>
    <div style="height: 100px;width:35%;">
        <% for(var i=0; i < opponnents.length; i++) {%>

            <div class="card mt-3" style="width: 600px;">
              <a href="/fight/<%= dragon.id %>/<%= opponnents[i].id %>" class="disabled_aColor">
              <img src="/images/<%= opponnents[i].avatar %>" class="img-fluid rounded-start" alt="<%= opponnents[i].avatar %>">
              <div class="card-body">
                <h5 class="card-title"><%= opponnents[i].name %> <small>lvl(<%= opponnents[i].level %>)</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Attack: <%= opponnents[i].attack %></li>
                <li class="list-group-item">Defense: <%= opponnents[i].defense %></li>
                <li class="list-group-item">Slip: <%= opponnents[i].slip %></li>
              </ul>
            </a>
            </div>
          <% } %>
    </div>
    </div>
</main>

</body>
